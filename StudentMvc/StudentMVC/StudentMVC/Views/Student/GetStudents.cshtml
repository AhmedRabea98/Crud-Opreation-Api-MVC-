@model IEnumerable<StudentMVC.Models.Students>

@{
    ViewData["Title"] = "GetStudents";
}

<h1>Students</h1>

<p>
    <a class="btn btn-success" asp-action="Create" asp-controller="student">Create New</a>
</p>
<table id="studentList" class="table tab-sm table-striped table-bordered m-2">
    <thead>
        <tr>
         
            <th>Studnet Name</th>
            <th>Action</th>
        </tr>
   
    </thead>
    <tbody>

        @foreach(var item in Model)
        {
            <tr>
                <th>@item.Name</th>
                <th><a class="btn btn-warning" asp-action="Edit" asp-controller="Student" asp-route-id="@item.Id">Edit</a> 
                    <a href="/Student/Delete/@item.Id" class="btn btn-danger" onclick="return confirm('are your sure to delete course ?')"> Delete </a>
                    <a class="btn btn-primary" asp-action="GetStudentByID" asp-controller="Student" asp-route-id="@item.Id">Details</a></th>
            </tr>
        }
    </tbody>
</table>